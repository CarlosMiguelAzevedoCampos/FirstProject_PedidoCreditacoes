@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
        <h1 class="display-4">Submeter creditações</h1>

        <form asp-action="Post" asp-controller="Home">
            <div class="form-group">
                <label for="InstituteName">Instituição</label>
                <select class="form-control" name="InstituteName">
                    <option>ISMAI</option>
                    <option>IPMaia</option>
                </select>
                <div class="form-group">
                    <label for="CourseName">Nome do Curso</label>
                    <input type="text" class="form-control" name="CourseName" placeholder="Informática">
                </div>
                <div class="form-group">
                    <label for="StudentName">Nome do Aluno</label>
                    <input type="text" class="form-control" name="StudentName" placeholder="Carlos Miguel Castro Azevedo Campos">
                </div>
                <div class="form-check">
                    <input type="checkbox" name="IsCet">
                    <label class="form-check-label" for="isCet">Creditações de CET?</label>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Carregar Ficheiros</label>
                    <input type="file" class="form-control-file" name="Attachments" multiple>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>